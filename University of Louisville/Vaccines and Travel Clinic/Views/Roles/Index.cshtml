@model IEnumerable<IdentitySample.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
}

<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <h3>Permissions</h3>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("CanModifyUsers"))
        {
            <a class="btn btn-success pull-right" href="@Url.Action("Create")">
                <span class="glyphicon glyphicon-plus-sign"></span>
                Add Permission
            </a>
        }
        else if (Request.IsAuthenticated && User.IsInRole("CanViewUsers"))
        {
            <p>You don't have permission to add new permissions.</p>
        }
    </div>
</div>
<div class="row">&nbsp;</div>
<div class="row">
    <div class="col-md-offset-1 col-md-10">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-cog text-warning"></span> <span class="caret"></span>
                            </button>
                            @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("CanModifyUsers"))
                            {
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li>
                                        <a href="@Url.Action("Details", new { id = item.Id })">
                                            <span class="glyphicon glyphicon-comment"></span>
                                            Details
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Edit", new { id = item.Id })">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                            Edit
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="@Url.Action("Delete", new { id = item.Id })">
                                            <span class="glyphicon glyphicon-remove"></span>
                                            Delete
                                        </a>
                                    </li>
                                </ul>
                            }
                            else if (Request.IsAuthenticated && User.IsInRole("CanViewUsers"))
                            {
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li>
                                        <a href="@Url.Action("Details", new { id = item.Id })">
                                            <span class="glyphicon glyphicon-comment"></span>
                                            Details
                                        </a>
                                    </li>
                                </ul>
                            }
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
